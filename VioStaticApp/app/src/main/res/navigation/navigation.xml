<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.viostaticapp.view.HomeFragment"
        android:label="Home"
        tools:layout="@layout/fragment_home" />
    <fragment
        android:id="@+id/searchFragment"
        android:name="com.viostaticapp.view.SearchFragment"
        android:label="Search"
        tools:layout="@layout/fragment_search" />
    <fragment
        android:id="@+id/profileFragment"
        android:name="com.viostaticapp.view.ProfileFragment"
        android:label="Profile"
        tools:layout="@layout/fragment_profile" />
    <fragment
        android:id="@+id/libraryFragment"
        android:name="com.viostaticapp.view.LibraryFragment"
        android:label="Library"
        tools:layout="@layout/fragment_library" />
    <activity
        android:id="@+id/youtubePlayerActivity"
        android:name="com.viostaticapp.view.YoutubePlayerActivity"
        android:label="activity_youtube_player"
        tools:layout="@layout/activity_youtube_player" />
    <activity
        android:id="@+id/loginActivity"
        android:name="com.viostaticapp.view.LoginActivity"
        android:label="activity_login"
        tools:layout="@layout/activity_login" />
    <activity
        android:id="@+id/signupActivity"
        android:name="com.viostaticapp.view.SignupActivity"
        android:label="activity_signup"
