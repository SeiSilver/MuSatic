<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Options"
        android:textSize="25sp"
        android:layout_marginBottom="5dp"
        />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/iconHighLight"
        android:drawableLeft="@drawable/ic_playlist_add"
        android:text="Add To Library"
        android:gravity="center_vertical"
        android:textAllCaps="false"
        android:textSize="18dp" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/iconHighLight"
        android:drawableLeft="@drawable/ic_playlist_remove"
        android:gravity="center_vertical"
        android:text="Delete from Library "
        android:textAllCaps="false"
        android:textSize="18dp" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Open with Youtube"
        android:drawableLeft="@drawable/ic_youtube_video"
        android:textAllCaps="false"
        android:gravity="center_vertical"
        android:backgroundTint="#E64C4C"
        android:textSize="18dp" />

</LinearLayout>